<!--个人中心-->
<import src="../template/template"></import>
<!--视屏-->
<!--<template is="video" data=""></template>-->
<!--有视屏-->
<view wx:if="{{ logins && hasvideo }}" class="video-area">
  <view wx:if="{{ show }}" class="video-cover-wrap">
    <image class="video-cover" src="{{ videoCover }}"></image>
    <image catchtap="playVideo" class="video-play" src="{{ videoPlay }}"></image>
    <view catchtap="editVideo" class="video-edit">编辑封面图片</view>
  </view>
</view>
<!--无视频-->
<view wx:else class="video-area novideo" catchtap="upVideo">
  <!--<view>-->
    <image src="{{ logins ?  hasvideo ? '' : '../../images/login-video.png' : '../../images/login-bg.png' }}"></image>
  <!--</view>-->
</view>
<!--用户信息-->
<view class="user-info">
  <!--头像-->
  <image catchtap="getUserInfo" class="user-avatar-url {{ logins ? '' : 'user-avatar-url-no' }}" src="{{userInfo.avatarUrl || '../../images/login-img.png'}}"></image>
  <view class="user-nick-name-wrap">
    <navigator hover-class="none" url="{{ logins ? '../userOrder/userOrder' : '' }}" class="order iconfont icon-dingdan">订单</navigator>
    <!--昵称-->
    <view wx:if="{{ logins }}" class="user-nick-name iconfont {{userInfo.gender == 1 ? 'icon-nanxing':'icon-nvxing' }}">{{userInfo.nickName}}</view>
    <navigator hover-class="none" url="{{ logins ? '../message/message' : '' }}" class="message iconfont icon-xiaoxi {{ hasmessage ? 'has' : '' }}">消息</navigator>
  </view>
  <!--相册-->
  <!--<template is="photo" data="{{ userPhoto: userPhotos, open_type: open_types, login: logins }}"></template>-->
  <navigator open-type="navigate" url="{{ logins ? '../photo/photo' : '' }}" class="photo">
    <view class="photo-top iconfont arrow icon-xiangce">我的相册</view>
    <view class="photo-show" wx:if="{{ logins }}">
      <block wx:for="{{ userPhotos }}" wx:for-item="photo" wx:key="unique">
        <view class="photo-wrap">
          <image src="{{ photo.photo_url }}"></image>
          <image wx:if="{{ photo.is_ta == '1' }}" class="other-up" src="../../images/other-up.png"></image>
        </view>
      </block>
      <view class="camera" wx:if="{{ userPhoto.length <= 3 }}"><image src="../../images/camera.png"></image></view>
    </view>
  </navigator>
  <!--<view>123</view>-->
  <!--用户操作-->
  <view class="operation">
    <block wx:for="{{ opertaion }}" wx:for-item="op" wx:key="unique">
      <navigator url="{{ op.url }}" class="op arrow iconfont {{ op.ico }}">{{op.title}}</navigator>
    </block>
  </view>
</view>
<!--视频弹窗形式-->
<view catchtap="videodel" wx:if="{{ !show }}" class="video-mask">
  <video objectFit="{{objectFit}}" bindended="playFinish"  autoplay="{{autoplay}}" controls="{{videoControls}}" class="user-video-two" src="{{videoSrc}}"></video>
</view>