<!--个人资料展示页面-->
<import src="../template/template"></import>
<!--视屏-->
<view class="video-area">
  <!--<video objectFit="{{objectFit}}" bindended="playFinish" wx:if="{{!show}}" autoplay="{{autoplay}}" controls="{{videoControls}}" class="user-video" src="{{videoSrc}}"></video>-->
  <view class="video-cover-wrap">
    <image mode="aspectFill" class="video-cover" src="{{ user.video_image || '../../images/video_cover.jpg' }}"></image>
    <image catchtap="playVideo" class="video-play" src="{{ videoPlay }}"></image>
  </view>
</view>
<!--用户信息-->
<view class="user-info">
  <!--头像-->
  <image class="user-avatar-url" src="{{ user.avatar }}"></image>
  <!--昵称-->
  <view class="user-nick-name iconfont {{ user.sex == 1 ? 'icon-nanxing':'icon-nvxing' }}">{{ user.name || user.user_nicename }}</view>
  <!--身高相关信息-->
  <view class="user-info-detail">
    <text class="user-detail">{{ user.ganqing == '0' ? '单身' : '非单身' }}</text>
    <text class="user-detail">{{ user.age }}</text>
    <text class="user-detail">{{ user.user_height }}cm</text>
    <text class="user-detail">{{ user.job }}</text>
  </view>
  <button disabled="{{user.isSubscribe}}" data-id="{{ user.user_id }}" catchtap="follow" class="follow-btn">{{ user.isSubscribe ? '已关注' : btnText }}</button>
</view>
<!--个人邀请信息-->
<view class="invite">
  <block wx:for-item="inv" wx:for="{{ user.engagements }}" wx:key="unique">
    <view class="inv-wrap">
      <view class="inv-text">{{ inv.order_date }}在{{ inv.area }}发布一个邀请</view>
      <navigator hover-class="none" url="../invitedConfirm/invitedConfirm?orderId={{ inv.order_id }}&title={{ inv.name }}" class="slider invited"><text>应邀</text></navigator>
    </view>
  </block>
</view>
<!--相册-->
<navigator open-type="navigate" url="../photo/photo?id={{ user.user_id }}&type=other" class="photo">
<view class="photo-top iconfont arrow icon-xiangce">我的相册</view>
<view class="photo-show" wx:if="true">
  <block wx:for="{{ user.ta_photos }}" wx:for-item="photo" wx:key="unique">
    <image mode="aspectFit" src="{{ photo.photo_url }}"></image>
  </block>
  <view class="camera" style="font-size: 26rpx;" wx:if="{{ user.ta_photos.length == 0 }}">Ta暂时没有上传图片哦</view>
</view>
</navigator>
<!--<template is="photo" data="{{ userPhoto: user.ta_photos, open_type: open_types, login: logins }}"></template>-->
<!--评价-->
<view class="estimate">
  <view class="es-title iconfont icon-pingjia">
    Ta收到的评价
  </view>
  <block wx:for="{{user.comment_list}}" wx:for-item="es" wx:key="unique">
    <view class="es-wrap">
      <image src="{{ es.avatar }}"></image>
      <view class="es-es">
        <view class="es-name iconfont {{ es.sex == 1 ? 'icon-nanxing' : 'icon-nvxing' }}">{{ es.user_nicename }}</view>
        <view class="es-text">{{ es.content }}</view>
      </view>
    </view>
  </block>
  <view wx:if="{{ user.comment_list.length == 0 }}" style="padding: 20rpx">Ta暂时还没有收到评价</view>
</view>
<!--显示更多-->
<view wx:if="{{ showMoreBtn }}" class="show-more">
  <view class="xsgd">向上滑动显示更多</view>
  <view class="xsgd-d"></view>
</view>
<!--Ta的深度资料-->
<view wx:if="{{ showTaDeep }}" class="moreInfo">
  <view class="moreInfo-title iconfont icon-shenduziliao">Ta的深度资料</view>
  <!--资料显示-->
  <view class="moreInfo-wrap">
    <!--公司-->
    <view class="text-wrap" >
      <view class="name-l">公司:</view>
      <!--picker-->
      <view class="name-r company gender">
        <input disabled="true" value="{{ user.compny || '尚未填写' }}"/>
      </view>
    </view>
    <!--车房状况-->
    <view class="text-wrap">
      <view class="name-l">车房状况:</view>
      <!--picker-->
      <view class="name-r company gender">
        <input disabled="true" value="{{ houseArr[user.cart_house] || '尚未填写' }}"/>
      </view>
    </view>
    <!--运动-->
    <view class="text-wrap">
      <view class="name-l">最喜欢/最近做过的运动:</view>
      <view class="name-r company gender">
        <input disabled="true" value="{{ user.likes_sports || '尚未填写' }}" />
      </view>
    </view>
    <!--电影-->
    <view class="text-wrap">
      <view class="name-l">最喜欢/最近看过的电影:</view>
      <view class="name-r company gender">
        <input disabled="true" value="{{ user.likes_movies || '尚未填写' }}"/>
      </view>
    </view>
    <!--读书-->
    <view class="text-wrap">
      <view class="name-l">最喜欢/最近看过的书:</view>
      <view class="name-r company gender">
        <input disabled="true" value="{{ user.likes_books || '尚未填写' }}" />
      </view>
    </view>
  </view>
</view>
<!--视频弹窗形式-->
<view catchtap="videodel" wx:if="{{ !show }}" class="video-mask">
  <video bindended="playFinish"  autoplay="{{autoplay}}" controls="{{videoControls}}" class="user-video-two" src="{{user.video_url || videoSrc}}"></video>
</view>