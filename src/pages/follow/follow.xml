<view class="wrap">
  <!--搜索-->
  <view class="search">
    <image catchtap="goNewfollow" class="ring {{ message ? 'has-message' : '' }}" src="../../images/follow-ring.png"></image>
    <span class="iconfont icon-sousuo"></span>
    <input class="search-input" confirm-type="search" placeholder-class="search-input-p" type="text" placeholder="点击进行搜索"/>
  </view>
  <!--内容排列-->
  <view class="people">
    <block wx:for="{{people}}" wx:key="unique" wx:for-item="item">
      <navigator hover-class='none' url='../userInfo/userInfo?userId={{ item.subscribe_user_id }}' class="p-wrap">
        <image class="p-img" src="{{ item.avatar }}"></image>
        <view wx:if="{{ item.order_num > 0 }}" class="p-number">{{ item.order_num }}</view>
        <view class="p-name iconfont {{ item.sex == 1 ? 'icon-nanxing' : 'icon-nvxing' }}">{{item.user_nicename}}</view>
        <view data-id="{{ item.subscribe_user_id }}" data-index="{{ index }}" catchtap="follows" class="p-follow-btn {{ item.is_subscribe == 1 ? 'p-follow iconfont icon-huxiangguanzhu' : 'p-nofollow' }}">{{ item.is_subscribe == 1 ? '互相关注' : '提醒关注' }}</view>
      </navigator>
    </block>
  </view>
</view>
<!--填写关注内容弹窗-->
<view wx:if="{{ mask }}" class="mask">
    <view class="m-wrap">
        <textarea class='itext' maxlength='20' bindinput='inputtext' placeholder='hi,快来关注我吧'></textarea>
        <view catchtap='follow' class='sendbtn'>发送</view>
    </view>
</view>