<view class="wrap">
  <!--搜索-->
  <view class="search">
    <image catchtap="goNewfollow" class="ring {{ message ? 'has-message' : '' }}" src="../../images/follow-ring.png"></image>
    <span class="iconfont icon-sousuo"></span>
    <input class="search-input" confirm-type="search" placeholder-class="search-input-p" type="text" placeholder="点击进行搜索"/>
  </view>
  <!--内容排列-->
  <view class="people">
    <block wx:for="{{people}}" wx:key="unique" wx:for-item="item">
      <view class="p-wrap">
        <image class="p-img" src="{{ item.avatar }}"></image>
        <view wx:if="{{ item.number }}" class="p-number">{{ item.number }}</view>
        <view class="p-name iconfont {{ item.sex == 1 ? 'icon-nanxing' : 'icon-nvxing' }}">{{item.user_nicename}}</view>
        <view data-id="{{ item.subscribe_user_id }}" data-index="{{ index }}" catchtap="follow" class="p-follow-btn {{ item.is_subscribe == 1 ? 'p-follow iconfont icon-huxiangguanzhu' : 'p-nofollow' }}">{{ item.is_subscribe == 1 ? '互相关注' : '提醒关注' }}</view>
      </view>
    </block>
  </view>
</view>