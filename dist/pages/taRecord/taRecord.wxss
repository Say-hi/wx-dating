.ta-record {
  border-top: 1rpx solid #ccc;
}
.ta-record .no-record {
  position: relative;
  margin-top: 20rpx;
  left: 50%;
  width: 400rpx;
  transform: translate(-50%, 0);
  border-radius: 20rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  border: 4rpx solid #ffc4a6;
  padding: 0 20rpx;
  text-align: center;
}
.ta-record .wrap {
  display: flex;
  align-items: center;
  padding: 20rpx 0rpx;
  padding-left: 24rpx;
  padding-right: 50rpx;
  border-bottom: 1rpx solid #ccc;
}
.ta-record .wrap image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.ta-record .wrap .name-wrap {
  margin-left: 40rpx;
  flex: 1;
}
.ta-record .wrap .name-wrap view {
  font-size: 26rpx;
  color: #999;
}
.ta-record .wrap .name-wrap .iconfont {
  font-size: 36rpx;
  color: #333;
  font-weight: 700;
}
.ta-record .wrap .name-wrap .iconfont::after {
  margin-left: 8rpx;
  color: #999;
  font-size: 26rpx;
}
.ta-record .wrap .edit {
  font-size: 28rpx;
  box-sizing: border-box;
  color: #ffc4a6;
  width: 140rpx;
  line-height: 48rpx;
  border: 2rpx solid #ffc4a6;
  border-radius: 10rpx;
  text-align: center;
}
.ta-record .tips {
  text-align: center;
  color: #ffc4a6;
  font-size: 24rpx;
  line-height: 60rpx;
}
.tac {
  font-size: 24rpx;
  margin-top: 20rpx;
  color: #999;
  text-align: center;
}
