page {
  padding: 0;
  margin: 0;
  width: 100%;
  height: 100%;
}
.wrap {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.wrap image {
  width: 100%;
  height: 100%;
}
.wrap .up-floor {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.wrap .up-floor .detail {
  text-align: right;
  font-size: 30rpx;
  color: #2b2f41;
  padding: 30rpx 26rpx;
}
.wrap .up-floor .center {
  margin-top: 200rpx;
  text-align: center;
}
.wrap .up-floor .center .money {
  font-size: 130rpx;
  color: #2b2f41;
  font-weight: 700;
}
.wrap .up-floor .center .money-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 700;
}
.wrap .up-floor .bottom {
  position: fixed;
  bottom: 130rpx;
  left: 50%;
  transform: translateX(-50%);
}
.wrap .up-floor .bottom .recharge {
  font-weight: 700;
  font-size: 32rpx;
  display: inline-block;
  width: 560rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  text-align: center;
  background-color: #ff884d;
}
.wrap .up-floor .bottom .sincerity {
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  margin-top: 39rpx;
}
.wrap .up-floor .bottom .sincerity-pay {
  margin-top: 14rpx;
  font-size: 28rpx;
  color: #f99;
  text-align: center;
}
.mask {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.mask .mask-in {
  border-radius: 10rpx;
  width: 70%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
}
.mask .mask-in .title {
  font-size: 30rpx;
  line-height: 50rpx;
  font-weight: 700;
}
.mask .mask-in input {
  margin: 10rpx 0;
}
.mask .mask-in .content {
  font-size: 24rpx;
  line-height: 60rpx;
}
.mask .mask-in .mask-btn {
  display: flex;
}
.mask .mask-in .mask-btn view {
  width: 50%;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: 700;
  border-top: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
}
.mask .mask-in .mask-btn view:nth-child(2) {
  color: #ffc4a6;
}
