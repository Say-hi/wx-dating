swiper image {
  width: 100%;
  height: 100%;
}
.center {
  padding: 24rpx;
  border-bottom: 98rpx solid #fff;
}
.center .title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}
.center .title-bottom {
  line-height: 86rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 8rpx solid #eee;
}
.center .title-bottom .address {
  font-size: 28rpx;
  color: #999;
}
.center .title-bottom .price {
  font-size: 36rpx;
  color: #f66;
}
.center .shopInfo {
  padding: 30rpx 0;
  overflow: hidden;
}
.center .shop-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 700;
  line-height: 90rpx;
  border-bottom: 1rpx solid #eee;
}
.center .iconfont::before {
  color: #ffc4a6;
  font-size: 50rpx;
  display: inline-block;
  transform: translate(0rpx, 6rpx);
  font-weight: 500;
  margin-right: 11rpx;
}
.center .shop-time,
.center .shop-address {
  font-size: 30rpx;
  color: #333;
  line-height: 87rpx ;
  min-height: 87rpx;
  font-weight: 700;
  border-bottom: 1rpx solid #eee;
}
.center .shop-address {
  display: flex;
  align-items: center;
  border-bottom: 8rpx solid #eee;
  line-height: 60rpx;
  padding-right: 30rpx;
}
.center .menu {
  text-align: center;
  font-size: 32rpx;
  font-weight: 700;
  line-height: 92rpx;
}
.center .menu-content {
  padding-bottom: 20rpx;
  border-bottom: 8rpx solid #eee;
}
.center .tips {
  margin-top: 17rpx;
  font-size: 28rpx;
  color: #666;
}
.bottom {
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
}
.bottom view {
  background-color: #fff;
  display: inline-block;
  width: 33.33%;
  line-height: 98rpx;
  font-size: 30rpx;
  color: #2b2f41;
  text-align: center;
  border-top: 1rpx solid #eee;
}
.bottom view:nth-child(2) {
  position: relative;
  font-size: 32rpx;
  color: #ffc4a6;
  background-color: #2b2f41;
  border-top: 10rpx solid #2b2f41;
  box-shadow: 0rpx 18rpx 8rpx 8rpx #c7c8cd;
}
.homebtn {
  position: fixed;
  bottom: 120rpx;
  right: 20rpx;
  width: 100rpx;
  height: 100rpx;
}
